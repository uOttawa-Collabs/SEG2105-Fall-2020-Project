<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutCustomerForm"
        android:layout_width="286dp"
        android:layout_height="451dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layoutSubmitButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextCustomerServiceFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Firstname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextCustomerServiceLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="LastName"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextCustomerServiceAddressStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address(i.e Street No.)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextCustomerServicePostalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Postal code"
            android:inputType="textPostalAddress" />

        <TextView
            android:id="@+id/textViewMessageToUser"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Please Select Below Your Birthday" />

        <DatePicker
            android:id="@+id/datePickerCustomerDOB"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <Spinner
            android:id="@+id/spinnerCFFDL"
            android:layout_width="185dp"
            android:layout_height="82dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSubmitButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCustomerForm">

        <Button
            android:id="@+id/buttonCustomerFormSubmit2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="Submit"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonCustomerFormNext2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:text="Next"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>