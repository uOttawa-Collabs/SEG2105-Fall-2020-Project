<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextItem"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:autofillHints="Item"
        android:gravity="center"
        android:hint="Item"
        android:inputType="textNoSuggestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextRegex"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:autofillHints="Regex"
        android:gravity="center"
        android:hint="Regular expression"
        android:inputType="textNoSuggestions"
        app:layout_constraintEnd_toStartOf="@+id/buttonDeleteItem"
        app:layout_constraintStart_toEndOf="@+id/editTextItem"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDeleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextRegex"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
