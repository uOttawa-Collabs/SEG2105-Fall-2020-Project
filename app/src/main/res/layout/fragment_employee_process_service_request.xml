<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonEmployeeAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="574dp"
        android:text="Accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonEmployeeReject"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonEmployeeReject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="574dp"
        android:text="Reject"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewRequest"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="23dp"
        android:text="Customer Name:Health Card"
        app:layout_constraintBottom_toTopOf="@+id/buttonEmployeeAccept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>